<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonTFQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonMultiQuiz"
        android:layout_marginBottom="37dp"
        android:background="@drawable/b_true"
        android:fontFamily="@font/tondo_bold"
        android:text="@string/trueFalseQuiz"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonMultiQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/b_true"
        android:fontFamily="@font/tondo_bold"
        android:text="@string/Multi_quiz"
        android:textAllCaps="false"
        android:textSize="20sp" />


</RelativeLayout>




