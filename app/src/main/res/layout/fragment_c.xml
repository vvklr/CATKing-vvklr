<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:gravity="top"
    android:background="#ffffff"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonMultiQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_button_new"
        android:fontFamily="@font/tondo_bold"
        android:text="@string/Multi_quiz"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#f2f2f2"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false">
        <TextView
            android:id="@+id/mcq_qn_view_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Select an option"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="@font/tondo_bold"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/tondo_regular"
            android:text=""
            android:textColor="#000000"
            android:textSize="150dp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>




