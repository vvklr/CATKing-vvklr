<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/lay_catking_small"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:ignore="SpUsage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/person"/>

        <EditText
            android:id="@+id/mname"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:hint="Enter Your Name"
            android:textColorHint="#e7a1ff"
            android:textCursorDrawable="@null"
            android:textColor="@color/main_color_400"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/mobilephone_s"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:hint="Enter Your Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:textColorHint="#e7a1ff"
            android:textCursorDrawable="@null"
            android:textColor="@color/main_color_400"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:src="@drawable/email"/>

        <EditText
            android:id="@+id/memail"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:hint="Enter Your Email"
            android:textColorHint="#e7a1ff"
            android:textCursorDrawable="@null"
            android:textColor="@color/main_color_400"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/termsAndCondition"
            android:textSize="12dp"
            android:fontFamily="@font/tondo_regular"
            android:textColor="@color/main_color_600"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_generateOTP"
            android:layout_margin="0dp"
            android:background="@color/main_color_500"
            android:minWidth="112dp"
            android:text="@string/send_opt"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>




